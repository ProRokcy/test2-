<Page x:Class="WpfApp1.Page.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фио:"/>
                <TextBox Name="TxbFio"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Роль:"/>
                <ComboBox Name="CmbRole" Width="159"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин:"/>
                <TextBox Name="TxbLogin"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:"/>
                <PasswordBox Name="PsbPass"/>
            </StackPanel>
            <StackPanel>
                <Button Content="Редактировать" Name="AddBtn" Click="AddBtn_Click"/>
                <Button Content="Удалить" Name="delBtn" Click="delBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
